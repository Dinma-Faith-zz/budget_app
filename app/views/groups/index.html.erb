<p style="color: green"><%= notice %></p>

<h1 class="text-center">Group List</h1>
  <% if @groups.empty? %>
    <p class="text-center">No group added yet!</p>
  <% end %>

<div id="groups">
  <div>
    <% current_user.groups.each do |group| %>
      <%= render group %>
      <p>
        <%= link_to "Show this group", user_group_path(current_user, group) %>
      </p>
    <% end %>
  </div>

      <div class="text-center link-new">
        <%= link_to "Add New group", new_user_group_path(current_user, @groups) %>
      </div>
</div>

